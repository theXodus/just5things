<div class="container">

  <div class="row">
    <div class="well">
      <h1><%= @user.email %> Profile</h1>
    </div>
  </div>

  <% if @user == current_user %>
    <ul class="list-group">
      <%= render partial: '/items/form', locals: { user: @user, item: @item } %>
    </ul>
  <% end %>

  <h3> Things to Do:</h3>

  <ul class="list-group">
    <% @items.each do |item| %>
      <%= render partial: '/items/item', locals: {item: item} %>
    <% end %>
  </ul>

</div>
