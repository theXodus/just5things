<% if @item.valid? %>
   $('.js-items').append("<%= escape_javascript(render(@item)) %>");
   $('.new-item').html("<%= escape_javascript(render partial: 'items/form', locals: { user: current_user, item: @new_item }) %>");
<% else %>
   $('.new-item').html("<%= escape_javascript(render partial: 'items/form', locals: { user: current_user, item: @item }) %>");
<% end %>
