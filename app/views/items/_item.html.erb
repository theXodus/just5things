<%= content_tag :div, class: 'media', id: "item-#{item.id}" do %>
  <li class="list-group-item">
    <span class="label label-<%= timeRemaining(item.created_at) %> label-pill">(created <%= distance_of_time_in_words(item.created_at, Time.now)%> ago)</span>
    <%= item.name %>

    <% if current_user == item.user %>
    | <%= link_to "Complete", [item.user, item], method: :delete, remote: true, class: 'glyphicon glyphicon-ok' %>
    <% end %>
  </li>
<% end %>
